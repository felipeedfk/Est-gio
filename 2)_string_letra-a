def verificar_letra_a(string):
    count_a = string.lower().count('a')
    
    if count_a > 0:
        return f"A letra 'a' ocorre {count_a} vezes na string."
    else:
        return "A letra 'a' n√£o ocorre na string."

texto = input("Informe uma string: ")
resultado = verificar_letra_a(texto)
print(resultado)
